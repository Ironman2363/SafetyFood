<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txtAcId"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/idTaiKoan"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Nhập họ tên:"/>

    <EditText
        android:id="@+id/edtName"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp" />
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Eamil:"/>
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập SDT:"/>
        <EditText
            android:id="@+id/edtSDT"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Địa Chỉ:"/>
        <EditText
            android:id="@+id/edtAddres"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp" />
    </LinearLayout>



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập Năm Sinh:"/>
    <EditText
        android:id="@+id/edtBirthday"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        />
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập Giới tính:"/>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rdo_GT_Nam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nữ" />

            <RadioButton
                android:id="@+id/rdo_BTN_Nu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24sp"
                android:text="Nam" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCreated"
        android:text="Created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/txtUpdated"
        android:text="Updated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>