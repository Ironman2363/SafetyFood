<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Cart_items_View">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="12">

        <ImageView
            android:id="@+id/Cart_items_img"
            android:src="@drawable/loaisp_coca"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/black"
                android:id="@+id/Cart_items_name"
                android:text="Coca-cola"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="12">

                <ImageButton
                    android:id="@+id/Cart_items_remove"
                    android:src="@drawable/remove"
                    android:backgroundTintMode="screen"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="24dp"/>

                <EditText
                    android:id="@+id/Cart_items_amount_edt"
                    android:text="1"
                    android:background="@drawable/boder_edittext"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Cart_items_amount_txt"
                    android:visibility="gone"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/Cart_items_plus"
                    android:src="@drawable/plus"
                    android:backgroundTintMode="screen"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="24dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Cart_items_price"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="45000Ä‘"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        </LinearLayout>

</androidx.cardview.widget.CardView>