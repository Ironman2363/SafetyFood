<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/anh_sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coca-cola"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/anh_sp"
        android:textSize="30sp"
        android:id="@+id/txt_ten_sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loai: thuc pham"
        android:id="@+id/txt_loai_sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/txt_ten_sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.000 VND"
        android:layout_toRightOf="@+id/anh_sp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_ten_sp"
        android:id="@+id/txt_gia_sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/12/2022"
        android:id="@+id/txt_ngay_sp"
        android:layout_below="@+id/txt_ten_sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>